            <img class="modal-img" srcset='https://image.tmdb.org/t/p/w300{{poster_path}} 1x, https://image.tmdb.org/t/p/w500{{poster_path}} 2x'
                src='https://image.tmdb.org/t/p/w300{{poster_path}}' 
                alt='{{title}}'/>
            <div>
                <h2 class="modal-film-title">{{title}}</h2>
                <ul class="modal-items">
                    <li class="modal-item-name">
                        Vote/Votes
                        <p class="modal-item-description">{{vote_average}}/{{vote_count}}</p>
                    </li>
                    <li class="modal-item-name">
                        Popularity
                        <p class="modal-item-description">{{popularity}}</p>
                    </li>
                    <li class="modal-item-name">
                        Original Title
                        <p class="modal-item-description">{{original_title}}</p>
                    </li>
                    <li class="modal-item-name">
                        Genre
                        {{#each genres}}
                        <p class="modal-item-description">{{this.name}}</p>
                        {{/each}}
                    </li>
                </ul>
                <h3 class="modal-description-title">About</h3>
                <p class="modal-description">
                    {{overview}}
                </p>
                <div class="modal-button-container">
                    <button class="modal-button modal-button-color" type="button">Add to watched</button>
                    <button class="modal-button" type="button">Add to queue</button>
                </div>
            </div>